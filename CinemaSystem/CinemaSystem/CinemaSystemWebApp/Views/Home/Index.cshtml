@{
    ViewData["Title"] = "CinemaSystem";
}

<div class="cgv-body__cards container-fluid">
    <div class="row">
        @foreach (Film film in ViewBag.Films)
        {
            <a asp-controller="Film" asp-action="Index" asp-route-id="@film.Id" class="cgv-body__card-item col-xl-2 col-md-3 col-sm-6 col-xs-12">
                <img class="cgv-body__card-item--thumbnail" style="object-position: center; object-fit: cover;" height="200" src="@film.ImageUrl">
                <div class="cgv-body__card-item--body">
                    <p class="cgv-body__card-item--body--title">@film.Name</p>
                    <p class="cgv-body__card-item--body--sub">@film.ReleaseDate</p>
                </div>
            </a>
        }
    </div>
</div>